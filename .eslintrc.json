{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "overrides": [
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "ignorePatterns" : ["/allure-report/"],
    "rules": {
        "semi": ["error", "always"],
		"quotes": ["error", "double"],
		"indent": ["error", "tab"],
		"eqeqeq":"error",
		"no-empty-function":"error",
		"no-var":"error",
		"max-lines": ["error", 100],
		"no-unused-vars": "error",
		"prefer-const":"error",
		"@typescript-eslint/no-var-requires": 0
    }
}
